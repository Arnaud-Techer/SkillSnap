                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                </button>
            </div>
        </div>
        
        <!-- Footer -->
        <div class="text-center mt-4">
            <div class="text-xs text-gray-400">
                <p>© 2024 SkillSnap</p>
                <p class="mt-1">Made with ❤️ for developers</p>
            </div>
        </div>
    </div>
</div>

@using Client.Services
@inject StatisticsService StatisticsService
@inject StatisticsRefreshService StatisticsRefreshService

@implements IDisposable

@code {
    private bool collapseNavMenu = true;
    private bool isLoadingStats = true;
    private StatisticsData? statistics;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadStatistics();
        
        // Subscribe to statistics refresh events
        StatisticsRefreshService.OnStatisticsChanged += OnStatisticsChanged;
    }

    private async void OnStatisticsChanged()
    {
        await LoadStatistics();
    }

    public void Dispose()
    {
        // Unsubscribe from events to prevent memory leaks
        StatisticsRefreshService.OnStatisticsChanged -= OnStatisticsChanged;
    }

    private async Task LoadStatistics()
    {
        try
        {
            isLoadingStats = true;
            statistics = await StatisticsService.GetStatisticsAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading statistics: {ex.Message}");
            statistics = null;
        }
        finally
        {
            isLoadingStats = false;
            StateHasChanged();
        }
    }

}
