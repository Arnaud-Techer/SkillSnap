<div class="p-8 h-full flex flex-col">
    <!-- Logo/Brand Section -->
    <div class="brand-section">
        <div class="brand-container">
            <div class="brand-icon">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
            </div>
            <div>
                <h2 class="brand-text">
                    SkillSnap
                </h2>
                <p class="brand-subtitle">Portfolio Platform</p>
            </div>
        </div>
        
        <!-- Quick Stats -->
        <div class="stats-section">
            <div class="stats-header">
                <h3 class="stats-title">Platform Stats</h3>
                <button @onclick="LoadStatistics" 
                        class="refresh-button"
                        title="Refresh statistics">
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                    </svg>
                </button>
            </div>
            @if (isLoadingStats)
            {
                <div class="loading-stats">
                    <div class="loading-spinner"></div>
                    <span class="loading-text">Loading stats...</span>
                </div>
            }
            else if (statistics != null)
            {
                <div class="stats-grid">
                    <div class="stat-item">
                        <div class="stat-value portfolios">@statistics.TotalPortfolios</div>
                        <div class="stat-label">Portfolios</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-value projects">@statistics.TotalProjects</div>
                        <div class="stat-label">Projects</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-value skills">@statistics.TotalSkills</div>
                        <div class="stat-label">Skills</div>
                    </div>
                </div>
            }
            else
            {
                <div class="error-stats">
                    <div class="error-stat-item">
                        <div class="error-stat-value">--</div>
                        <div class="error-stat-label">Unable to load stats</div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Navigation -->
    <nav class="navigation">
        <div class="nav-section-title">
            Navigation
        </div>
        
        <NavLink class="nav-link" 
                 href="" Match="NavLinkMatch.All">
            <div class="nav-link-icon">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                </svg>
            </div>
            <div class="nav-link-content">
                <div class="nav-link-title">Dashboard</div>
                <div class="nav-link-subtitle">Overview & Analytics</div>
            </div>
        </NavLink>
        
        <NavLink class="nav-link" 
                 href="portfolio">
            <div class="nav-link-icon">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
            </div>
            <div class="nav-link-content">
                <div class="nav-link-title">Portfolios</div>
                <div class="nav-link-subtitle">Browse & Discover</div>
            </div>
        </NavLink>
        
    </nav>

    <!-- Bottom section -->
    <div class="mt-8 pt-6 border-t border-gray-200/50">
        <!-- User Profile Card -->
        @if (AuthViewModel.IsAuthenticated)
        {
            <div class="bg-gradient-to-r from-gray-50 to-blue-50 rounded-2xl p-4 border border-gray-200/50">
                <div class="flex items-center space-x-3">
                    <div class="w-10 h-10 bg-gradient-to-r from-blue-500 to-purple-600 rounded-xl flex items-center justify-center shadow-lg">
                        <span class="text-white text-sm font-bold">@(AuthViewModel.CurrentUserEmail?.Substring(0, 1).ToUpper() ?? "U")</span>
                    </div>
                    <div class="flex-1">
                        <div class="text-sm font-semibold text-gray-800">@(AuthViewModel.CurrentUserEmail ?? "User")</div>
                        <div class="text-xs text-gray-500">Authenticated User</div>
                    </div>
                    <button @onclick="HandleLogout" 
                            class="p-2 text-gray-400 hover:text-red-600 hover:bg-red-50 rounded-lg transition-all duration-200"
                            title="Logout">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                        </svg>
                    </button>
                </div>
            </div>
        }
        else
        {
            <div class="bg-gradient-to-r from-gray-50 to-blue-50 rounded-2xl p-4 border border-gray-200/50">
                <div class="text-center">
                    <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-purple-600 rounded-xl flex items-center justify-center shadow-lg mx-auto mb-3">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                    </div>
                    <div class="text-sm font-semibold text-gray-800 mb-2">Welcome to SkillSnap</div>
                    <div class="space-y-2">
                        <a href="/login" class="block w-full bg-blue-600 text-white text-sm font-medium py-2 px-4 rounded-lg hover:bg-blue-700 transition-colors duration-200">
                            Sign In
                        </a>
                        <a href="/register" class="block w-full bg-gray-200 text-gray-700 text-sm font-medium py-2 px-4 rounded-lg hover:bg-gray-300 transition-colors duration-200">
                            Create Account
                        </a>
                    </div>
                </div>
            </div>
        }
        
        <!-- Footer -->
        <div class="text-center mt-4">
            <div class="text-xs text-gray-400">
                <p>© 2025 SkillSnap</p>
            </div>
        </div>
    </div>
</div>

@using Client.Services
@using Client.ViewModels
@inject StatisticsService StatisticsService
@inject StatisticsRefreshService StatisticsRefreshService
@inject AuthViewModel AuthViewModel

@implements IDisposable

@code {
    private bool collapseNavMenu = true;
    private bool isLoadingStats = true;
    private StatisticsData? statistics;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadStatistics();
        await AuthViewModel.CheckAuthenticationStatusAsync();
        
        // Subscribe to statistics refresh events
        StatisticsRefreshService.OnStatisticsChanged += OnStatisticsChanged;
        
        // Subscribe to authentication state changes
        AuthViewModel.AuthenticationStateChanged += OnAuthenticationStateChanged;
    }

    private async void OnStatisticsChanged()
    {
        await LoadStatistics();
    }

    private async void OnAuthenticationStateChanged(bool isAuthenticated)
    {
        await InvokeAsync(StateHasChanged);
    }

    private async Task HandleLogout()
    {
        await AuthViewModel.LogoutAsync();
        StateHasChanged();
    }

    public void Dispose()
    {
        // Unsubscribe from events to prevent memory leaks
        StatisticsRefreshService.OnStatisticsChanged -= OnStatisticsChanged;
        AuthViewModel.AuthenticationStateChanged -= OnAuthenticationStateChanged;
    }

    private async Task LoadStatistics()
    {
        try
        {
            isLoadingStats = true;
            statistics = await StatisticsService.GetStatisticsAsync();
        }
        catch (Exception)
        {
            statistics = null;
        }
        finally
        {
            isLoadingStats = false;
            StateHasChanged();
        }
    }

}
