<div class="p-8 h-full flex flex-col">
    <!-- Logo/Brand Section -->
    <div class="mb-12">
        <div class="flex items-center space-x-3 mb-3">
            <div class="w-12 h-12 bg-gradient-to-r from-blue-600 via-purple-600 to-pink-600 rounded-2xl flex items-center justify-center shadow-lg">
                <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
            </div>
            <div>
                <h2 class="text-2xl font-bold bg-gradient-to-r from-gray-900 to-gray-700 bg-clip-text text-transparent">
                    SkillSnap
                </h2>
                <p class="text-sm text-gray-500 font-medium">Portfolio Platform</p>
            </div>
        </div>
        
        <!-- Quick Stats -->
        <div class="bg-gradient-to-r from-blue-50 to-purple-50 rounded-2xl p-4 border border-blue-100">
            <div class="flex items-center justify-between mb-3">
                <h3 class="text-sm font-semibold text-gray-700">Platform Stats</h3>
                <button @onclick="LoadStatistics" 
                        class="p-1 text-gray-400 hover:text-blue-600 hover:bg-blue-100 rounded-lg transition-all duration-200"
                        title="Refresh statistics">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                    </svg>
                </button>
            </div>
            @if (isLoadingStats)
            {
                <div class="flex items-center justify-center py-4">
                    <div class="animate-spin rounded-full h-6 w-6 border-b-2 border-blue-600"></div>
                    <span class="ml-2 text-sm text-gray-600">Loading stats...</span>
                </div>
            }
            else if (statistics != null)
            {
                <div class="flex items-center justify-between">
                    <div class="text-center">
                        <div class="text-lg font-bold text-blue-600">@statistics.TotalPortfolios</div>
                        <div class="text-xs text-gray-600">Portfolios</div>
                    </div>
                    <div class="text-center">
                        <div class="text-lg font-bold text-purple-600">@statistics.TotalProjects</div>
                        <div class="text-xs text-gray-600">Projects</div>
                    </div>
                    <div class="text-center">
                        <div class="text-lg font-bold text-pink-600">@statistics.TotalSkills</div>
                        <div class="text-xs text-gray-600">Skills</div>
                    </div>
                </div>
            }
            else
            {
                <div class="flex items-center justify-center py-4">
                    <div class="text-center">
                        <div class="text-lg font-bold text-gray-400">--</div>
                        <div class="text-xs text-gray-500">Unable to load stats</div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Navigation -->
    <nav class="flex-1 space-y-3">
        <div class="text-xs font-semibold text-gray-400 uppercase tracking-wider mb-4 px-3">
            Navigation
        </div>
        
        <NavLink class="group flex items-center px-4 py-4 text-gray-700 rounded-2xl hover:bg-gradient-to-r hover:from-blue-50 hover:to-purple-50 hover:text-blue-700 transition-all duration-300 hover:shadow-lg hover:scale-105" 
                 href="" Match="NavLinkMatch.All">
            <div class="w-10 h-10 bg-gradient-to-r from-blue-500 to-blue-600 rounded-xl flex items-center justify-center mr-4 group-hover:shadow-lg transition-all duration-300">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                </svg>
            </div>
            <div>
