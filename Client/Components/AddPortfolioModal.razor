@using Shared.Models
@using Client.Models

<div class="modal-backdrop" @onclick="OnClose">
    <div class="modal-content" @onclick:stopPropagation="true">
        <div class="modal-header">
            <div class="modal-header-content">
                <h3 class="modal-title">
                    <span class="modal-title-icon">➕</span>
                    Create New Portfolio
                </h3>
                <button @onclick="OnClose" class="modal-close-button">
                    <span class="modal-close-icon">✕</span>
                </button>
            </div>
        </div>
        
        <div class="modal-body">
            <form @onsubmit="HandleSubmit" @onsubmit:preventDefault="true">
                <!-- Portfolio Information -->
                <div class="form-section">
                    <div>
                        <label class="form-label">Name *</label>
                        <input type="text" @bind="localPortfolioName" 
                               class="form-input"
                               placeholder="Enter your full name"
                               required />
                    </div>

                    <div>
                        <label class="form-label">Bio *</label>
                        <textarea @bind="localPortfolioBio" 
                                  class="form-textarea"
                                  rows="4"
                                  placeholder="Tell us about yourself, your experience, and what makes you unique..."
                                  minlength="20"
                                  maxlength="500"
                                  required></textarea>
                        <div class="form-help-text">
                            @localPortfolioBio.Length / 500 characters (minimum 20)
                        </div>
                    </div>

                    <div>
                        <label class="form-label">Profile Image URL</label>
                        <input type="url" @bind="localPortfolioImageUrl" 
                               class="form-input"
                               placeholder="https://example.com/your-photo.jpg" />
                    </div>
                </div>

                <!-- Projects and Skills Preview -->
                <div class="preview-grid">
                    <!-- Projects Section -->
                    <div class="preview-section">
                        <div class="preview-header">
                            <h4 class="preview-title">Projects (@PendingProjects.Count)</h4>
                            <button type="button" @onclick="OnAddProject" 
                                    class="btn-primary preview-button">
                                <span class="preview-button-icon">➕</span>
                                Add Project
                            </button>
                        </div>
                        
                        @if (PendingProjects.Any())
                        {
                            <div class="preview-list">
                                @foreach (var project in PendingProjects)
                                {
                                    <div class="preview-item">
                                        <h5 class="preview-item-title">@project.Title</h5>
                                        <p class="preview-item-description">@project.Description</p>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="preview-empty">No projects added yet</p>
                        }
                    </div>

                    <!-- Skills Section -->
                    <div class="preview-section">
                        <div class="preview-header">
                            <h4 class="preview-title">Skills (@PendingSkills.Count)</h4>
                            <button type="button" @onclick="OnAddSkill" 
                                    class="btn-primary preview-button">
                                <span class="preview-button-icon">➕</span>
                                Add Skill
                            </button>
                        </div>
                        
                        @if (PendingSkills.Any())
                        {
                            <div class="preview-list">
                                @foreach (var skill in PendingSkills)
                                {
                                    <div class="preview-item">
                                        <div class="preview-item-content">
                                            <span class="preview-item-name">@skill.Name</span>
                                            <span class="preview-item-level @GetLevelColor(skill.Level)">@skill.Level</span>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="preview-empty">No skills added yet</p>
                        }
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="action-buttons">
                    <button type="button" @onclick="OnClose" class="btn-secondary action-button">
                        Cancel
                    </button>
                    <button type="submit" class="btn-primary action-button">
                        Create Portfolio
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@code {
    [Parameter] public List<Project> PendingProjects { get; set; } = new();
    [Parameter] public List<Skill> PendingSkills { get; set; } = new();
    
    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public EventCallback<(string name, string bio, string imageUrl)> OnSubmit { get; set; }
    [Parameter] public EventCallback OnAddProject { get; set; }
    [Parameter] public EventCallback OnAddSkill { get; set; }

    // Local variables for form inputs
    private string localPortfolioName = string.Empty;
    private string localPortfolioBio = string.Empty;
    private string localPortfolioImageUrl = string.Empty;

    private bool isSubmitting = false;

    private async Task HandleSubmit()
    {
        if (isSubmitting || !OnSubmit.HasDelegate)
        {
            return;
        }

        isSubmitting = true;
        try
        {
            await OnSubmit.InvokeAsync((localPortfolioName, localPortfolioBio, localPortfolioImageUrl));
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private string GetLevelColor(string level)
    {
        return level?.ToLower() switch
        {
            "beginner" => "bg-red-100 text-red-800",
            "novice" => "bg-orange-100 text-orange-800",
            "intermediate" => "bg-yellow-100 text-yellow-800",
            "advanced" => "bg-blue-100 text-blue-800",
            "expert" => "bg-green-100 text-green-800",
            "master" => "bg-purple-100 text-purple-800",
            _ => "bg-gray-100 text-gray-800"
        };
    }
}
