@using Shared.Models

<div class="skills-container">
    <h3 class="skills-title">
        <span class="skills-title-icon">💡</span>
        Skills & Expertise
    </h3>
    
    @if (Skills?.Any() == true)
    {
        <div class="skills-grid">
            @foreach (var skill in Skills)
            {
                <div class="skill-card">
                    <div class="skill-header">
                        <h4 class="skill-name">@skill.Name</h4>
                        <div class="skill-level-actions">
                            <span class="skill-level-badge level-@(skill.Level?.ToLower() ?? "default")">
                                @skill.Level
                            </span>
                            <!-- Action buttons -->
                            <div class="skill-actions">
                                <button @onclick="@(() => OnEditSkill.InvokeAsync(skill))" 
                                        class="skill-action-button"
                                        title="Edit skill">
                                    <span class="skill-action-icon">✏️</span>
                                </button>
                                <button @onclick="@(() => OnDeleteSkill.InvokeAsync(skill))" 
                                        class="skill-action-button danger"
                                        title="Delete skill">
                                    <span class="skill-action-icon">🗑️</span>
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Progress bar -->
                    <div class="progress-container">
                        <div class="progress-bar progress-@(skill.Level?.ToLower() ?? "default")" 
                             style="width: @GetProgressPercentage(skill.Level)%"></div>
                    </div>
                    
                    <!-- Level indicator with icon -->
                    <div class="level-indicator">
                        <span class="level-text">Beginner</span>
                        <div class="level-stars">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <div class="level-icon level-star-@(GetStarColor(skill.Level, i))"></div>
                            }
                        </div>
                        <span class="level-text">Expert</span>
                    </div>
                </div>
            }
        </div>
        
        <!-- Add New Skill Button (when skills exist) -->
        @if (OnAddSkill.HasDelegate)
        {
            <div class="add-skill-button">
                <button @onclick="OnAddSkill" class="add-skill-btn">
                    <span class="add-skill-icon">➕</span>
                    Add New Skill
                </button>
            </div>
        }
    }
    else
    {
        <div class="empty-state">
            <div class="empty-state-icon">
                <span class="empty-state-icon-text">💡</span>
            </div>
            <h3 class="empty-state-title">No skills added yet</h3>
            <p class="empty-state-description">Skills will appear here once they're added to your profile.</p>
            @if (OnAddSkill.HasDelegate)
            {
                <button @onclick="OnAddSkill" class="empty-state-button">
                    <span class="empty-state-button-icon">➕</span>
                    Add Your First Skill
                </button>
            }
        </div>
    }
</div>

@code {
    [Parameter]
    public List<Skill>? Skills { get; set; }
    
    [Parameter]
    public EventCallback OnAddSkill { get; set; }
    
    [Parameter]
    public EventCallback<Skill> OnEditSkill { get; set; }
    
    [Parameter]
    public EventCallback<Skill> OnDeleteSkill { get; set; }


    private int GetProgressPercentage(string level)
    {
        return level?.ToLower() switch
        {
            "beginner" => 20,
            "novice" => 35,
            "intermediate" => 50,
            "advanced" => 70,
            "expert" => 85,
            "master" => 100,
            _ => 0
        };
    }

    private string GetStarColor(string level, int starNumber)
    {
        int levelValue = level?.ToLower() switch
        {
            "beginner" => 1,
            "novice" => 2,
            "intermediate" => 3,
            "advanced" => 4,
            "expert" => 5,
            "master" => 5,
            _ => 0
        };

        return starNumber <= levelValue ? "filled" : "empty";
    }
}
