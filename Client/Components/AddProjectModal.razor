@using Shared.Models

<div class="modal-backdrop" @onclick="OnClose">
    <div class="modal-content" @onclick:stopPropagation="true">
        <div class="modal-header">
            <div class="modal-header-content">
                <h3 class="modal-title">
                    <span class="modal-title-icon">üìÅ</span>
                    Add New Project
                </h3>
                <button @onclick="OnClose" class="modal-close-button">
                    <span class="modal-close-icon">‚úï</span>
                </button>
            </div>
        </div>
        
        <div class="modal-body">
            <form @onsubmit="HandleSubmit" @onsubmit:preventDefault="true">
                <div class="form-section">
                    <div>
                        <label class="form-label">Project Title *</label>
                        <input type="text" @bind="localProjectTitle" 
                               class="form-input"
                               placeholder="Enter project title"
                               required />
                    </div>

                    <div>
                        <label class="form-label">Description *</label>
                        <textarea @bind="localProjectDescription" 
                                  class="form-textarea"
                                  rows="4"
                                  placeholder="Describe your project, technologies used, and key features..."
                                  required></textarea>
                    </div>

                    <div>
                        <label class="form-label">Project Image URL</label>
                        <input type="url" @bind="localProjectImageUrl" 
                               class="form-input"
                               placeholder="https://example.com/project-screenshot.jpg" />
                    </div>
                </div>

                <div class="action-buttons">
                    <button type="button" @onclick="OnClose" 
                            class="cancel-button action-button">
                        Cancel
                    </button>
                    <button type="submit" 
                            class="submit-button action-button">
                        Add Project
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@code {
    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public EventCallback<(string title, string description, string imageUrl)> OnSubmit { get; set; }

    // Local variables for form inputs
    private string localProjectTitle = string.Empty;
    private string localProjectDescription = string.Empty;
    private string localProjectImageUrl = string.Empty;

    private bool isSubmitting = false;

    private async Task HandleSubmit()
    {
        if (isSubmitting || !OnSubmit.HasDelegate)
        {
            return;
        }

        isSubmitting = true;
        try
        {
            await OnSubmit.InvokeAsync((localProjectTitle, localProjectDescription, localProjectImageUrl));
        }
        finally
        {
            isSubmitting = false;
        }
    }
}
