@using Shared.Models

<div class="space-y-6">
    <div class="flex items-center justify-between">
        <h3 class="text-xl font-bold text-gray-800 flex items-center">
            <svg class="w-6 h-6 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
            </svg>
            Featured Projects
        </h3>
        <span class="text-sm text-gray-500 bg-gray-100 px-3 py-1 rounded-full">
            @(Projects?.Count ?? 0) projects
        </span>
    </div>
    
    @if (Projects?.Any() == true)
    {
        <div class="project-grid">
            @foreach (var project in Projects)
            {
                <div class="project-card">
                    <!-- Project Image -->
                    <div class="project-image-container">
                        <img src="@(string.IsNullOrEmpty(project.ImageUrl) ? "https://via.placeholder.com/400x300/6366f1/ffffff?text=Project" : project.ImageUrl)" 
                             alt="@project.Title" 
                             class="project-image" />
                    </div>
                    
                    <!-- Project Content -->
                    <div class="project-content">
                        <div class="project-header">
                            <h4 class="project-title">
                                @project.Title
                            </h4>
                            <!-- Action buttons -->
                            <div class="project-actions">
                                <button @onclick="@(() => OnEditProject.InvokeAsync(project))" 
                                        class="action-button"
                                        title="Edit project">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                    </svg>
                                </button>
                                <button @onclick="@(() => OnDeleteProject.InvokeAsync(project))" 
                                        class="action-button danger"
                                        title="Delete project">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                    </svg>
                                </button>
                            </div>
                        </div>
                        
                        <p class="project-description">
                            @project.Description
                        </p>
                        
                        <!-- Project ID badge -->
                        <div class="project-id-badge">
                            <span class="project-id">
                                #@project.Id
                            </span>
                        </div>
                    </div>
                </div>
            }
        </div>
        
        <!-- Add New Project Button (when projects exist) -->
        @if (OnAddProject.HasDelegate)
        {
            <div class="add-project-button">
                <button @onclick="OnAddProject" class="add-project-btn">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                    Add New Project
                </button>
            </div>
        }
        
        <!-- View All Projects Button -->
        @if (Projects.Count > 6)
        {
            <div class="view-all-button">
                <button class="view-all-btn">
                    View All Projects
                </button>
            </div>
        }
    }
    else
    {
        <!-- Empty State -->
        <div class="empty-state">
            <div class="empty-state-icon">
                <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                </svg>
            </div>
            <h3 class="empty-state-title">No projects yet</h3>
            <p class="empty-state-description">
                Projects will appear here once they're added to your portfolio. Showcase your work and let others see what you can create!
            </p>
            @if (OnAddProject.HasDelegate)
            {
                <button @onclick="OnAddProject" class="empty-state-button">
                    <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                    Add Your First Project
                </button>
            }
        </div>
    }
</div>

@code {
    [Parameter]
    public List<Project>? Projects { get; set; }
    
    [Parameter]
    public EventCallback OnAddProject { get; set; }
    
    [Parameter]
    public EventCallback<Project> OnEditProject { get; set; }
    
    [Parameter]
    public EventCallback<Project> OnDeleteProject { get; set; }
}
