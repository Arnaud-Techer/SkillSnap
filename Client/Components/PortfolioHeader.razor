@using Client.ViewModels
@inject AuthViewModel AuthViewModel

<div class="portfolio-header">
    <div class="header-content">
        <div class="header-title-section">
            <h1 class="header-title">Portfolio Showcase</h1>
            <p class="header-subtitle">Discover amazing developers and their incredible work</p>
        </div>
        
        <SearchBar 
            SearchQuery="@SearchQuery"
            IsSearching="IsSearching"
            OnSearchQueryChanged="OnSearchQueryChanged"
            OnSearchKeyDown="HandleSearchKeyDown"
            OnClearSearch="OnClearSearch" />
        
        <div class="header-actions">
            @if (AuthViewModel.IsAuthenticated)
            {
                <button @onclick="OnAddPortfolio" class="btn-primary btn-with-icon">
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                    Add Portfolio
                </button>
                <button @onclick="OnDeletePortfolio" class="btn-danger btn-with-icon">
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                    Delete Portfolio
                </button>
            }
            else
            {
                <button @onclick="OnShowAuthRequired" class="btn-disabled btn-with-icon">
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                    </svg>
                    Sign In Required
                </button>
            }
        </div>
    </div>
</div>

@code {
    [Parameter] public string SearchQuery { get; set; } = string.Empty;
    [Parameter] public bool IsSearching { get; set; } = false;
    [Parameter] public EventCallback<string> OnSearchQueryChanged { get; set; }
    [Parameter] public EventCallback OnSearchKeyDown { get; set; }
    [Parameter] public EventCallback OnClearSearch { get; set; }
    [Parameter] public EventCallback OnAddPortfolio { get; set; }
    [Parameter] public EventCallback OnDeletePortfolio { get; set; }
    [Parameter] public EventCallback OnShowAuthRequired { get; set; }

    private async Task HandleSearchKeyDown()
    {
        await OnSearchKeyDown.InvokeAsync();
    }
}
