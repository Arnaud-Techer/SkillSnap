@using Client.ViewModels
@inject AuthViewModel AuthViewModel

@if (IsSearchResults)
{
    <!-- No Search Results -->
    <div class="empty-state-container">
        <div class="empty-state-icon-sm">
            <span class="empty-state-icon-svg">üîç</span>
        </div>
        <h3 class="empty-state-title">No portfolios found</h3>
        <p class="empty-state-description">
            No portfolios match your search for "<span class="empty-state-highlight">@SearchQuery</span>". 
            Try a different search term or clear the search to see all portfolios.
        </p>
        <div class="empty-state-actions">
            <button @onclick="OnClearSearch" class="btn-secondary">
                Clear Search
            </button>
            @if (AuthViewModel.IsAuthenticated)
            {
                <button @onclick="OnAddPortfolio" class="btn-primary btn-with-icon">
                    <span>‚ûï</span>
                    Add Portfolio
                </button>
            }
            else
            {
                <button @onclick="OnShowAuthRequired" class="btn-disabled btn-with-icon">
                    <span>üîí</span>
                    Sign In Required
                </button>
            }
        </div>
    </div>
}
else
{
    <!-- No Portfolios at All -->
    <div class="empty-state-container">
        <div class="empty-state-icon">
            <span class="empty-state-icon-svg">üë•</span>
        </div>
        <h2 class="empty-state-title-large">No portfolios found</h2>
        <p class="empty-state-description-large">
            Be the first to showcase your amazing work! Create your portfolio and let others discover your incredible projects and skills.
        </p>
        @if (AuthViewModel.IsAuthenticated)
        {
            <button @onclick="OnAddPortfolio" class="btn-primary">
                Create Your Portfolio
            </button>
        }
        else
        {
            <button @onclick="OnShowAuthRequired" class="btn-disabled btn-with-icon">
                <span>üîí</span>
                Sign In to Create Portfolio
            </button>
        }
    </div>
}

@code {
    [Parameter] public bool IsSearchResults { get; set; } = false;
    [Parameter] public string SearchQuery { get; set; } = string.Empty;
    [Parameter] public EventCallback OnClearSearch { get; set; }
    [Parameter] public EventCallback OnAddPortfolio { get; set; }
    [Parameter] public EventCallback OnShowAuthRequired { get; set; }
}
